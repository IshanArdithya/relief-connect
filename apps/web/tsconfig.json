{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@nx-mono-repo-deployment-test/shared": ["../../libs/shared/src/index.ts"],
      "@nx-mono-repo-deployment-test/shared/*": ["../../libs/shared/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../../libs/shared/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "../../.cursor/**/*",
    "../../.cursorrules",
    "**/.cursorrules",
    "../../**/*.md",
    "../../libs/shared/src/dtos/**/request/**/*"
  ]
}

